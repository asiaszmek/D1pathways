<ReactionScheme>
<!-- Gs coupled Dopamine D1 Receptor; Ligand is Da,
     Dabuf is used to eliminate injected Da -->
    <Specie name="Da"                id="Da"               kdiff="10"      kdiffunit = "mu2/s"/>
    <Specie name="Dbuf"              id="Dbuf"              kdiff="10"   kdiffunit="mu2/s"/>
    <Specie name="DaDbuf"             id="DaDbuf"              kdiff="0"   kdiffunit="mu2/s"/>

    <Specie name="Ca"                id="Ca"               kdiff="10"      kdiffunit = "mu2/s"/>
    <Specie name="Cbuf"              id="Cbuf"              kdiff="10"   kdiffunit="mu2/s"/>
    <Specie name="CaCbuf"             id="CaCbuf"              kdiff="0"   kdiffunit="mu2/s"/>

    <Specie name="Glu"               id="Glu"               kdiff="10"      kdiffunit = "mu2/s"/>
    <Specie name="gbuf"              id="gbuf"              kdiff="10"   kdiffunit="mu2/s"/>
    <Specie name="Glugbuf"           id="Glugbuf"              kdiff="0"   kdiffunit="mu2/s"/>

   <!--0a. Da or Da Agonist binds to buffer: Da + Dbuf  <->  DaDbuf  -->
    <Reaction name = "Da-buf reac" id="Da-buf_id">
        <Reactant specieID="Da"                      />
        <Reactant specieID="Dbuf"                      />
        <Product  specieID="DaDbuf"                   />

        <forwardRate> 0.3e-6      </forwardRate>
        <reverseRate> 0      </reverseRate>
        <Q10>         0.2          </Q10>
    </Reaction>
    
  <!--0b. Ca binds to buffer: Ca + Cbuf  <->  Cabuf  -->
    <Reaction name = "Ca-buf reac" id="Ca-buf_id">
        <Reactant specieID="Ca"                      />
        <Reactant specieID="Cbuf"                      />
        <Product  specieID="CaCbuf"                   />

        <forwardRate> 0.3e-6      </forwardRate>
        <reverseRate> 0      </reverseRate>
        <Q10>         0.2          </Q10>
    </Reaction>
    
  <!--0c. Glu binds to buffer: Glu + gbuf  <->  Glugbuf  -->
    <Reaction name = "Glu-buf reac" id="Glu-buf_id">
        <Reactant specieID="Glu"                      />
        <Reactant specieID="gbuf"                      />
        <Product  specieID="Glugbuf"                   />

        <forwardRate> 0.3e-6      </forwardRate>
        <reverseRate> 0      </reverseRate>
        <Q10>         0.2          </Q10>
    </Reaction>
</ReactionScheme>

